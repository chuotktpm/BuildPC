<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_main"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_name_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Main"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_socket_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Socket"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_brand_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_memoryType_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_price_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#FF0000"
                android:textSize="25sp"
                android:textStyle="bold" />




        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/icon_info_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_information_circle_sharp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>